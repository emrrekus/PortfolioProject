@model List<PortfolioProject.Models.Testimonial>
@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Referans Listesi ve İşlemleri</h2>


<table class="table table-bordered">

    <tr>
        <th>Id</th>
        <th>İsim Soyisim</th>
        <th>Adres</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>@item.FeatureId</td>
            <td>@item.NameSurname</td>
            <td>@item.Adress</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" alt="Resim" style="width: 100px; height: auto;" /></td>


            <td><a href="/Testimonial/TestimonialDelete/@item.FeatureId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Testimonial/TestimonialUpdate/@item.FeatureId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>

<a href="/Testimonial/TestimonialCreate" class="btn btn-info">Yeni Portfolio Girişi</a>
