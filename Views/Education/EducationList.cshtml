@model List<PortfolioProject.Models.Education>
@{
    ViewBag.Title = "EducationList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Eğitim Hayatı Listem</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Okul Adı</th>
        <th>Bölüm</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EducationId</td>
            <td>@item.SubTitle</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Date</td>
            <td><a href="/Education/EducationDelete/@item.EducationId" class="btn btn-danger">Sil</a> </td>
            <td><a href="/Education/EducationUpdate/@item.EducationId" class="btn btn-success">Güncelle</a> </td>
        </tr>

    }


</table>
<a href="/Education/CreateEducation" class="btn btn-info">Yeni Eğitim Bilgisi Girişi</a>