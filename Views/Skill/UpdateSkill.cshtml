@model PortfolioProject.Models.Skill
@{
    ViewBag.Title = "UpdateSkill";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Yetenek Güncelleme Sayfası</h2>
<form method="post">

    @Html.HiddenFor(x => x.SkillId)
    <label>Yetenek Adı</label>
    @Html.TextBoxFor(x => x.SkillName, new { @class = "form-control" })
    <br />
    <label>Değer</label>
    @Html.TextBoxFor(x => x.Rate, new { @class = "form-control" })
    <br />
    <label>Icon</label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    <br />
    <label>Statü</label>
    @Html.DropDownListFor(x => x.Status, new List<SelectListItem>
    {
        new SelectListItem { Text = "Aktif", Value = "true" },
        new SelectListItem { Text = "Pasif", Value = "false" }
    }, "Seçiniz", new { @class = "form-control" })
    <br />


    <button class="btn btn-info">  Güncelle </button>
</form>