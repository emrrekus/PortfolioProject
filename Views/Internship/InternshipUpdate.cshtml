@model PortfolioProject.Models.Internship
@{
    ViewBag.Title = "InternshipUpdate";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4"> Eğitim Güncelleme Sayfası</h2>

<form method="post">

    @Html.HiddenFor(x => x.InternshipId)
    <label>Şirket Adı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Bölüm Adı</label>
    @Html.TextBoxFor(x => x.Subtitle, new { @class = "form-control" })
    <br />
    <label>Tarih</label>
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />


    <button class="btn btn-info">  Güncelle </button>
</form>

